#!/bin/bash

CMD=

case "$1" in
	's')
		CMD='status'
		;;
	'l')
		CMD='log'
		;;
	'd')
		CMD='diff'
		;;
	'dl')
		CMD='diff @{1}..'
		;;
	'a')
		CMD='add'
		;;
	'c')
		CMD='commit'
		;;
	'cm')
		CMD='commit -m'
		;;
	'ca')
		CMD='commit --amend'
		;;
	'cam')
		CMD='commit --amend -m'
		;;
	'p')
		CMD='push'
		;;
	'pu')
		CMD='push -u origin'
		;;
	'pf')
		CMD='push --force'
		;;
	'u')
		CMD='pull'
		;;
	'f')
		CMD='fetch'
		;;
	'g')
		CMD='merge'
		;;
	'k')
		CMD='checkout'
		;;
	'b')
		CMD='branch'
		;;
	*)
		CMD="$1"
		;;
esac

shift

git $CMD $@
