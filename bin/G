#!/bin/bash

CMD=

case "$1" in
	's')
		CMD='status'
		;;
	'd')
		CMD='diff'
		;;
	'a')
		CMD='add'
		;;
	'c')
		CMD='commit'
		;;
	'cm')
		CMD='commit -m'
		;;
	'ca')
		CMD='commit --amend'
		;;
	'p')
		CMD='push'
		;;
	'u')
		CMD='pull'
		;;
	'f')
		CMD='fetch'
		;;
	'g')
		CMD='merge'
		;;
	'm')
		CMD='mv'
		;;
	'r')
		CMD='rm'
		;;
	'k')
		CMD='checkout'
		;;
	'b')
		CMD='branch'
		;;
	*)
		CMD="$1"
		;;
esac

shift

git $CMD $@
