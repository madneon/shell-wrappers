#!/bin/bash

# Copyright Â© 2016-2021 by madneon
# http://madneon.com

tmp="/tmp/s-$$"
list=""

for c in $(<~/.ssh/list); do
	l=`echo $c|cut -f1 -d"="` # label
	c=`echo $c|cut -f2 -d"="` # connection string
	list="$list $c $l "
done

if [ "$list" != "" ]; then
	dialog --clear --extra-button --extra-label "Edit list" --menu "ssh connections:" 40 80 13 $list 2> $tmp
else
	mcedit ~/.ssh/list
	exit 0
fi

case "$?" in
	0)
		j=`cat $tmp|cut -f2- -d","` # jumps
		l=`cat $tmp|cut -f1 -d","|cut -f1 -d"@"` # login
		h=`cat $tmp|cut -f1 -d","|cut -f2 -d"@"|cut -f1 -d":"` # host
		p=`cat $tmp|cut -f1 -d","|cut -f2 -d":"` # port
		rm $tmp

		if [ -n "$j" ]; then
			j="-J $j "
		fi
		ssh $j$l@$h -p $p
		;;
	3)
		mcedit ~/.ssh/list
		;;
	*)
		rm $tmp
		;;
esac

# madneon 2016-04-03,2021-07-02
